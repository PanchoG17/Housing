extends ../layouts/base

block content

    .py-4
        h1.text-4xl.my-5.font-extrabold.text-center.text-white Housing.com

        h2.text-center.text-2xl.text-white=title

        if errores
            div(class="max-w-md mx-auto my-5")
                each error in errores
                    p.bg-red-600.text-white.text-xs.text-center.rounded-md.p-2.mb-1.font-bold= error.msg

        if success
            div(class="max-w-md mx-auto my-5")
                each message in success
                    p.bg-white.text-green-500.text-xs.text-center.rounded-md.p-2.mb-1.font-bold= message.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow-2xl
                form.space-y-4(method="POST" action="/auth/registrar")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value= user ? user.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="text" name="email" value= user ? user.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password_repeat") Repetir Contraseña
                        input#password_repeat.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir Contraseña" type="password" name="password_repeat")

                    input(class="py-2 w-full text-white bg-blue-600 font-bold hover:bg-blue-700 hover:cursor-pointer" type="submit" value="Registrarse")

                    div.flex.items-center.justify-center
                        a.text-gray-500.text-xs(href="/auth/login" class="hover:text-gray-900") ¿Ya estas registrado? Inicia Sesión
