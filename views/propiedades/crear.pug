extends ../layouts/base

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-white Housing.com

        h2.text-center.text-2xl.text-white=title

        div(class="bg-white shadow py-8 px-4 rounded mx-auto my-10 max-w-4xl md:px-10")

            form.space-y-8(action="")

                div.space-y-2
                    h3.text-lg-leading-6.font-medium.text-gray-900 Información General:
                    p.text-gray-600 Añade información destacada sobre la propiedad

                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo
                    input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo, ej. Alpina 3 Habitaciones" type="text" name="titulo")

                div(class="md:flex md:gap-4 space-y-8 md:space-y-0")
                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Categoria
                        select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="categoria")
                            option(value="") - Seleccionar -

                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                        select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="precio")
                            option(value="") - Seleccionar -

                div(class="md:flex md:gap-4 space-y-8 md:space-y-0")
                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitaciones") Habitaciones
                        select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="habitaciones")
                            option(value="") - Seleccionar -
                            - var n = 1;
                                while n < 6
                                    option(value=n) #{n++}

                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="banos") Baños
                        select#banos.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="banos")
                            option(value="") - Seleccionar -
                            - var n = 1;
                                while n < 6
                                    option(value=n) #{n++}

                    div(class="md:w-1/3")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="estacionamientos") Estacionamientos
                        select#estacionamientos.w-full.px-3.py-2.border.border-gray-300.rounded-md(name="estacionamientos")
                            option(value="") - Seleccionar -
                            - var n = 1;
                                while n < 6
                                    option(value=n) #{n++}

                div.space-y-2
                    h3.text-lg-leading-6.font-medium.text-gray-900 Ubicación:
                    p.text-gray-600 Añade la ubicación de la propiedad

                    #mapa.h-96

                    div
                        p.calle

                    input(type="hidden" name="calle" id="calle")
                    input(type="hidden" name="lat" id="lat")
                    input(type="hidden" name="lng" id="lng")

block scripts

    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")